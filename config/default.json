{
  "sequelize": {
    "sync": {
      "force": false
    }
  },
  "http": {
    "port": 3000
  },
  "auth": {
    "secretKey": "MY_SECRET_KEY"
  },
  "ws": {
    "channels": {
      "dbLiveUpdates": "live:entity-hook"
    }
  },
  "sio": {
    "opts": {
      "maxHttpBufferSize": 1e8,
      "cors": {
        "origin": "*",
        "methods": [
          "GET",
          "POST",
          "DELETE"
        ]
      }
    }
  }
}
